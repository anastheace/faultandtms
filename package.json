{
    "name": "tms-smart-trip",
    "version": "1.0.0",
    "description": "TMS Smart Trip Monorepo",
    "scripts": {
        "start": "node server/server.js",
        "build": "npm install --prefix client && npm run build --prefix client && npm install --prefix server && cd server && node setup_db.js",
        "install-all": "npm install --prefix client && npm install --prefix server",
        "dev": "npm-run-all --parallel dev:client dev:server",
        "dev:client": "npm run dev --prefix client",
        "dev:server": "npm run dev --prefix server"
    },
    "dependencies": {
        "bcryptjs": "^3.0.3",
        "cors": "^2.8.6",
        "dotenv": "^17.3.1",
        "express": "^5.2.1",
        "jsonwebtoken": "^9.0.3",
        "sqlite3": "^5.1.7"
    },
    "devDependencies": {
        "npm-run-all": "^4.1.5"
    }
}